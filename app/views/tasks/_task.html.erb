<% if task.completed %>
  <p>
  <strike><%= task.description %></strike>
  </p>
<% else %>
  <p>
    <%= task.description %>
  </p>
<% end %>
<p>
  <strong>Date:</strong>
  <%= task.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= task.time %>
</p>

<p>
  <strong>Priority:</strong>
  <%= task.priority %>
</p>

<%= link_to 'Mark as complete', complete_project_task_path(task.project, task), method: :patch %> |
<%= link_to 'Edit', edit_project_task_path(task.project, task) %> |
<%= link_to 'Destroy', [task.project, task], method: :delete, data: { confirm: 'Are you sure?' } %>